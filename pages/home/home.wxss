/* pages/home/home.wxss */
.head{
  width:100%;
  height:350rpx;
}

.top-image{
  width:100%;
  height:100%;
}

.categoryList {
  width:100%;
  height:174rpx;
  border-bottom:5rpx solid #f4f4f4; 
}

.category-info{
  display:inline-block;
  text-align:center;
  position:relative;
  margin-top:20rpx;
  height:150rpx;
  width:25%;
}

.category-image{
  width:95rpx;
  height:95rpx;
}

.category-text{
  font-size: 25rpx;
  width: 100%;
  line-height: 30rpx
}

.example {
  display: flex;
  width: 100%;
  height: 50rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}

.document{
  margin:10rpx 0;
  height:300rpx;
}

.title{
 display:flex;
  height:50rpx;
}
.color-bar{

  width:10rpx;
  height:100%;
  background-color: #ff8547;
  border-radius: 10px;
  margin:2rpx 10rpx;
}

.more{
  display: inline-block;
  margin-left: 450rpx;
  text-decoration:underline;
  color:#999;
  font-size: 15px;
}

.fileList{
  margin:20rpx 0;
}

.file-info{
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin :10rpx 0;
  font-size: 14px;
  letter-spacing:0.2em;
}

.course{
  margin:20rpx 0;
  height:200rpx;
  border:10rpx 10rpx solid #999;
}